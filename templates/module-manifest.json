      "hooks": [
        { "source": "security/hooks/secret-filter.sh", "destination": ".claude/hooks/secret-filter.sh", "executable": true },
        { "source": "security/hooks/command-guard.sh", "destination": ".claude/hooks/command-guard.sh", "executable": true },
        { "source": "security/hooks/db-guard.sh", "destination": ".claude/hooks/db-guard.sh", "executable": true },
        { "source": "security/hooks/security-trigger.sh", "destination": ".claude/hooks/security-trigger.sh", "executable": true }
      ],
      "docs": []
