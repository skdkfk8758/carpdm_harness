      "description": "보안 훅 + 감사 + 권한 관리 자동화",
      "dependencies": ["core"],
      "commands": [
        { "source": "security/commands/security-audit.md", "destination": ".claude/commands/security-audit.md" },
        { "source": "security/commands/security-setup.md", "destination": ".claude/commands/security-setup.md" }
