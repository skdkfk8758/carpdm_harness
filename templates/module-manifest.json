      "agentFiles": [
        { "source": "core/agent/plan.md", "destination": ".agent/plan.md" },
        { "source": "core/agent/todo.md", "destination": ".agent/todo.md" },
        { "source": "core/agent/context.md", "destination": ".agent/context.md" }
      ]
    },
    "tdd": {
      "name": "tdd",
      "description": "Red-Green-Refactor TDD 사이클 + 자동 차단",
      "dependencies": ["core"],
      "commands": [
        { "source": "tdd/commands/tdd-cycle.md", "destination": ".claude/commands/tdd-cycle.md" }
      ],
      "hooks": [
        { "source": "tdd/hooks/tdd-guard.sh", "destination": ".claude/hooks/tdd-guard.sh", "executable": true }
      ],
      "docs": []
    },
    "quality": {
      "name": "quality",
      "description": "품질 게이트 + 교차 검증 + 변경 추적",
      "dependencies": ["core"],
      "commands": [
        { "source": "quality/commands/quality-guard.md", "destination": ".claude/commands/quality-guard.md" },
        { "source": "quality/commands/post-task-check.md", "destination": ".claude/commands/post-task-check.md" },
