      "rules": [
        { "source": "team-memory/rules/conventions.md", "destination": ".claude/rules/conventions.md" },
        { "source": "team-memory/rules/patterns.md", "destination": ".claude/rules/patterns.md" },
        { "source": "team-memory/rules/decisions.md", "destination": ".claude/rules/decisions.md" },
        { "source": "team-memory/rules/mistakes.md", "destination": ".claude/rules/mistakes.md" }
