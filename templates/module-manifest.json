{
  "version": "1.0.0",
  "modules": {
    "core": {
      "name": "core",
      "description": "Plan-First + SPARC + External Memory 핵심 워크플로우",
      "dependencies": [],
      "commands": [
        { "source": "core/commands/plan-gate.md", "destination": ".claude/commands/plan-gate.md" },
        { "source": "core/commands/read-domain-context.md", "destination": ".claude/commands/read-domain-context.md" },
        { "source": "core/commands/memory-manager.md", "destination": ".claude/commands/memory-manager.md" }
      ],
      "hooks": [
        { "source": "core/hooks/_harness-common.sh", "destination": ".claude/hooks/_harness-common.sh", "executable": true },
        { "source": "core/hooks/pre-task.sh", "destination": ".claude/hooks/pre-task.sh", "executable": true },
        { "source": "core/hooks/plan-guard.sh", "destination": ".claude/hooks/plan-guard.sh", "executable": true },
        { "source": "core/hooks/post-task.sh", "destination": ".claude/hooks/post-task.sh", "executable": true }
