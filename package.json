{
  "name": "carpdm-harness",
  "version": "2.0.0",
  "description": "AI 협업 워크플로우 MCP 서버 플러그인 — Plan-First + DDD + SPARC",
  "type": "module",
  "scripts": {
    "build": "tsup && node scripts/copy-templates.js",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    ".claude-plugin"
  ],
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "claude-code",
    "ai-workflow",
    "plan-first",
    "ddd",
    "sparc",
    "mcp-server",
    "mcp",
    "plugin"
  ],
  "author": "carpdm",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/skdkfk8758/carpdm_harness.git"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "diff": "^7.0.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/diff": "^6.0.0",
    "@types/node": "^20.14.0",
    "tsup": "^8.2.0",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0"
  }
}
