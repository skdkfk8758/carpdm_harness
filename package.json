{
  "name": "carpdm-harness",
  "version": "1.0.0",
  "description": "AI 협업 워크플로우 모듈화 CLI - Plan-First + DDD + SPARC + External Memory",
  "type": "module",
  "bin": {
    "carpdm-harness": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup && node scripts/copy-templates.js",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "claude-code",
    "ai-workflow",
    "plan-first",
    "ddd",
    "sparc",
    "cli"
  ],
  "author": "carpdm",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/skdkfk8758/carpdm_harness.git"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "diff": "^7.0.0",
    "inquirer": "^9.3.0",
    "ora": "^8.1.0"
  },
  "devDependencies": {
    "@types/diff": "^6.0.0",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.14.0",
    "tsup": "^8.2.0",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0"
  }
}
