{
  "name": "carpdm-harness",
  "version": "4.1.2",
  "description": "AI 협업 워크플로우 MCP 서버 플러그인 — Plan-First + DDD + SPARC",
  "type": "module",
  "scripts": {
    "build": "tsup && node scripts/copy-templates.js",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepare": "git rev-parse --git-dir > /dev/null 2>&1 && git config core.hooksPath .githooks || true"
  },
  "files": [
    "dist",
    "templates",
    "presets",
    "skills",
    "hooks",
    "agents",
    ".claude-plugin",
    ".mcp.json",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=22"
  },
  "keywords": [
    "claude-code",
    "ai-workflow",
    "plan-first",
    "ddd",
    "sparc",
    "mcp-server",
    "mcp",
    "plugin"
  ],
  "author": "carpdm",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/skdkfk8758/carpdm_harness.git"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.27.1",
    "diff": "^8.0.0",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.0",
    "vitest": "^4.0.18"
  }
}
