{
  "hooks": {
    "SessionStart": [{
      "matcher": "*",
      "hooks": [{
        "type": "command",
        "command": "bash \"${CLAUDE_PLUGIN_ROOT}/hooks/run-hook.sh\" session-start",
        "timeout": 5000
      }]
    }],
    "UserPromptSubmit": [{
      "matcher": "*",
      "hooks": [{
        "type": "command",
        "command": "bash \"${CLAUDE_PLUGIN_ROOT}/hooks/run-hook.sh\" prompt-enricher",
        "timeout": 3000
      }]
    }],
    "SubagentStart": [{
      "matcher": "*",
      "hooks": [{
        "type": "command",
        "command": "bash \"${CLAUDE_PLUGIN_ROOT}/hooks/run-hook.sh\" subagent-context",
        "timeout": 3000
      }]
    }],
    "PreToolUse": [{
      "matcher": "harness_workflow",
      "hooks": [{
        "type": "command",
        "command": "bash \"${CLAUDE_PLUGIN_ROOT}/hooks/run-hook.sh\" workflow-guard",
        "timeout": 3000
      }]
    }, {
      "matcher": "harness_*",
      "hooks": [{
        "type": "command",
        "command": "bash \"${CLAUDE_PLUGIN_ROOT}/hooks/run-hook.sh\" workflow-guard",
        "timeout": 3000
      }]
    }],
    "PostToolUse": [{
      "matcher": "harness_*",
      "hooks": [{
        "type": "command",
        "command": "bash \"${CLAUDE_PLUGIN_ROOT}/hooks/run-hook.sh\" event-logger",
        "timeout": 3000
      }]
    }, {
      "matcher": "Bash",
      "hooks": [{
        "type": "command",
        "command": "bash \"${CLAUDE_PLUGIN_ROOT}/hooks/run-hook.sh\" quality-gate",
        "timeout": 10000
      }]
    }, {
      "matcher": "Task",
      "hooks": [{
        "type": "command",
        "command": "bash \"${CLAUDE_PLUGIN_ROOT}/hooks/run-hook.sh\" remember-handler",
        "timeout": 3000
      }]
    }],
    "PostToolUseFailure": [{
      "matcher": "*",
      "hooks": [{
        "type": "command",
        "command": "bash \"${CLAUDE_PLUGIN_ROOT}/hooks/run-hook.sh\" tool-failure-tracker",
        "timeout": 3000
      }]
    }],
    "SubagentStop": [{
      "matcher": "*",
      "hooks": [{
        "type": "command",
        "command": "bash \"${CLAUDE_PLUGIN_ROOT}/hooks/run-hook.sh\" subagent-complete",
        "timeout": 5000
      }]
    }],
    "PreCompact": [{
      "matcher": "*",
      "hooks": [{
        "type": "command",
        "command": "bash \"${CLAUDE_PLUGIN_ROOT}/hooks/run-hook.sh\" pre-compact",
        "timeout": 5000
      }]
    }],
    "Stop": [{
      "matcher": "*",
      "hooks": [{
        "type": "command",
        "command": "bash \"${CLAUDE_PLUGIN_ROOT}/hooks/run-hook.sh\" session-end",
        "timeout": 5000
      }]
    }]
  }
}
